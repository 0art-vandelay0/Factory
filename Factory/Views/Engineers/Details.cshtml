@{
    Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Engineer

<h2>Engineers</h2>

<h3>@Model.Name</h3>

@if (@Model.JoinEntities.Count == 0)
{
    <p>This engineer is not liscensed to repair any machines.</p>
}
else
{
    <h4>Machines</h4>
    <ul>
        @foreach (var machine in Model.JoinEntities)
        {
            <li class="list-margins">@machine.Machine.Name</li>
        }
    </ul>
}

<p>@Html.ActionLink("Add Machine", "AddMachine", "Engineers", new {id = Model.EngineerId})</p>

<div id="nav-links">
    <p>@Html.ActionLink("Engineers", "Index", "Engineers")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>