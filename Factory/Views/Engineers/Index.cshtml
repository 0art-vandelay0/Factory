@{
    Layout = "_Layout";
} @using Factory.Models

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
    <h2>There are no currently no Engineers.</h2>
}
else
{
    <ul class="client-stylist-link">
    @foreach (Engineer engineer in Model)
        {
            <li>
                @Html.ActionLink($"{engineer.Name}", "Details", "Engineers", new {id =
        engineer.EngineerId})
            </li>
        }
    </ul>
}

<div id="nav-links">
    <p>@Html.ActionLink("Add Engineer", "Create", "Engineers")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>

