@{
    Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<h2>Machines</h2>

<h3>@Model.Name</h3>

@if (@Model.JoinEntities.Count == 0)
{
    <p>This machine is not assigned to any licensed engineers.</p>
}
else
{
    <h4>Engineers with a license for this machine:</h4>
    <ul class="engineer-machine-link">
        @foreach (var engineer in Model.JoinEntities)
        {
            <li class="list-margins">@Html.ActionLink($"{engineer.Engineer.Name}", "Details", "Engineers", new {id = engineer.EngineerId})</li>
        }
    </ul>
}

<div id="nav-links">
    <p>@Html.ActionLink("Machines", "Index", "Machines")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>