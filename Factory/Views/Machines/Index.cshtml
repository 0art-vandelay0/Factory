@{
    Layout = "_Layout";
} @using Factory.Models

<h1>Machines</h1>

@if (@Model.Count == 0)
{
    <h2>There are no currently no Machines.</h2>
}
else
{
    <ul class="client-stylist-link">
    @foreach (Machine machine in Model)
        {
            <li>
                @Html.ActionLink($"{machine.Name}", "Details", "Machines", new {id =
        machine.MachineId})
            </li>
        }
    </ul>
}

<div id="nav-links">
    <p>@Html.ActionLink("Add Machine", "Create", "Machines")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>

